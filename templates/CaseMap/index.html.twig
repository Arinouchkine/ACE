{% extends 'base.html.twig' %}
{% block body %}
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>Events</th>
                <th>Type</th>
                <th colspan="2" ><a class="btn btn-success btn-block" href="{{ path('createCaseMap') }}">Cr√©er</a></th>
            </tr>
            </thead>
            <tbody>
            {% set token = csrf_token('CASEMAP_DELETE') %}
            {% for caseMap in caseMaps %}
                <tr>
                    <td>{{ caseMap.id }}</td>
                    <td>
                        {% for event in caseMap.caseMapEvents %}
                            <span class="badge">{{ event.titre }}</span>
                        {% endfor %}
                    </td>
                    <td>{{ caseMap.caseMapType.titre}}</td>
                    <td><a class="btn btn-warning" href="{{ path('editCaseMap',{id:caseMap.id}) }}">Modifier</a></td>
                    <td><a class="btn btn-danger" href="{{ path('deleteCaseMap',{id:caseMap.id,token:token}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

