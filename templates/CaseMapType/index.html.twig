{% extends 'base.html.twig' %}
{% block body %}
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Description</th>
                <th colspan="2" ><a class="btn btn-success btn-block" href="{{ path('createCaseMapType') }}">Cr√©er</a></th>
            </tr>
            </thead>
            <tbody>
            {% set token = csrf_token('CASEMAPTYPE_DELETE') %}
            {% for caseMapType in caseMapTypes %}
                <tr>
                    <td>{{ caseMapType.id }}</td>
                    <td>{{ caseMapType.titre}}</td>
                    <td>{{ caseMapType.description }}</td>
                    <td><a class="btn btn-warning" href="{{ path('editCaseMapType',{id:caseMapType.id}) }}">Modifier</a></td>
                    <td><a class="btn btn-danger" href="{{ path('deleteCaseMapType',{id:caseMapType.id,token:token}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

