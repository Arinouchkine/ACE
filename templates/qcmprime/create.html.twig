{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.question) }}
    <ul id="choice-fields-list"
        data-prototype="{{ form_widget(form.choices.vars.prototype)|e('html_attr') }}">
        {% for choice in form.choices %}
            <li class="created">
                {{ form_row(choice) }}
            </li>
        {% endfor %}
    </ul>
    {{ form_row(form.explication) }}
    {% if  qcmprime is defined %}
        <button class="btn btn-primary">Modifier</button>
    {% else %}
        <button class="btn btn-primary">Cree</button>
    {% endif %}
    {{ form_end(form) }}
{% endblock %}