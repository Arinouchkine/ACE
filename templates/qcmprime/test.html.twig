{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <h1>{{ question }}</h1>
    {{ form_widget(form) }}
    {% if explication is defined %}
        <p> {{ explication }} </p>
        {% if buttons %}
            <a class="btn btn-info" href="{{ path('app_qcmprime_votingp',{id:id}) }}">Like</a>
            <a class="btn btn-info" href="{{ path('app_qcmprime_votingn',{id:id}) }}">Dislike</a>
        {% endif %}
        <a class="btn btn-secondary" href="{{ path('app_qcmprime_index') }}">Retour</a>
    {% else %}
        <button class="btn btn-primary">Submit</button>
    {% endif %}


    {{ form_end(form) }}

{% endblock %}

